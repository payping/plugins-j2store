<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" method="upgrade" group="j2store">
	<name>payping</name>
	<title>payping</title>
	<author>Erfan Ebrahimi</author>
	<creationDate>Jan 2019</creationDate>
	<copyright>Copyright 2019 Erfan Ebrahimi</copyright>
	<license>http://www.gnu.org/licenses/old-licenses/gpl-2.0.html GNU/GPL version 2</license>
	<authorEmail>me@erfanebrahimi.ir</authorEmail>
	<authorUrl>http://www.erfanebrahimi.ir</authorUrl>
	<version>1.0.2</version>
	<description>پلاگین پرداخت جی۲ برای پی‌پینگ</description>
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field name="currency" type="list" default="0" label="واحد مالی" description="">
					<option value="1">تومان</option>
					<option value="10">ریال</option>
				</field>
				<field name="token" type="text" size="40" label="توکن" description="توکن دریافت شده از پی‌پینگ" default=""></field>
			</fieldset>
		</fields>
	</config>
	<files>
		<filename plugin="payment_payping">payment_payping.php</filename>
		<filename>index.html</filename>
		<folder>payment_payping</folder>
	</files>	
</extension>
